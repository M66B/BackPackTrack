<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Blog">
		<EditTextPreference android:key="BlogURL"
			android:title="URL" android:defaultValue="http://dev.bokhorst.biz/"></EditTextPreference>
		<EditTextPreference android:key="BlogID"
			android:title="ID" android:defaultValue="1"></EditTextPreference>
		<EditTextPreference android:key="BlogUser"
			android:title="User"></EditTextPreference>
		<EditTextPreference android:key="BlogPwd"
			android:title="Password"></EditTextPreference>
	</PreferenceCategory>
	<PreferenceCategory android:title="Tracking">
		<EditTextPreference android:key="TrackName"
			android:title="Track name" android:defaultValue="Journey"></EditTextPreference><ListPreference android:title="Track names" android:key="TrackNameList"></ListPreference><EditTextPreference android:key="TrackInterval"
			android:title="Track interval" android:defaultValue="30"
			android:summary="minutes"></EditTextPreference>
		<EditTextPreference android:key="FixTimeout"
			android:title="Fix timeout" android:defaultValue="300"
			android:summary="seconds"></EditTextPreference>
		<EditTextPreference android:key="MaxWait"
			android:title="Max. wait" android:defaultValue="60" android:summary="seconds"></EditTextPreference>
		<EditTextPreference android:key="MinAccuracy"
			android:title="Min. accuracy" android:defaultValue="50"
			android:summary="meters"></EditTextPreference>
		<EditTextPreference android:key="GeocodeCount"
			android:title="Geocode count" android:defaultValue="5"></EditTextPreference>
		
		
	</PreferenceCategory>
</PreferenceScreen>
